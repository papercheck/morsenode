@import 'utils'

body
  padding-top 25%
  
#presser.up, #presser.down
  position relative
  top -64px
  box-shadow 0px 45px 35px black
  background red
  display block
  margin 0 auto
  line-height 100%
  border-radius 64px
  width 128px
  height 128px
  &:hover
    // Mouse should change to the hand when over the button.
    cursor pointer 
    
#presser.down
  margin-top 25px
  width 118px
  height 118px
  box-shadow 0px 20px 10px #5f5f5f
  
  